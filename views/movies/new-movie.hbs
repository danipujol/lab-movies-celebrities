<h2>New Movie</h2>

<div>
<form action="/movie/create"  method="get">

<label for="title">Title</label>
<input type="text" name="title">

<br>

<label for="genre">Genre</label>
<input type="text" name="genre">

<br>


<label for="plot">Plot</label>
<input type="text" name="plot">

<br>

<select name="cast" multiple="true">
{{#each this.allCelebrities}}
<option value="{{this._id}}">{{this.celebrity}}</option>
{{/each}}
{{!-- dudas --}}

</select>


<br>

<button>Submit</button>


</form>

</div>


<div>

<label for="celebrities">Choose a Celebritie:</label>

 <select name="celebrities" {{!--id=""--}} multiple> 

{{#each this.allCelebrities}}
